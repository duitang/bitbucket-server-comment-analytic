<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
    </plugin-info>

    <!--
        Import the GitScm component so it can be wired into components in this plugin. Services provided in the
        stash-api don't require explicit imports, but GitScm is provided by stash-scm-git-api in the scm-git plugin
    -->
    <component-import key="git-scm" interface="com.atlassian.stash.scm.git.GitScm" />

    <!--
        Define the ArchiveService as a component so it can be wired into other components. It is also marked with
        public="true" in case other plugins wish to import and use it.
    -->
    <component key="archive-service" class="com.atlassian.stash.archive.DefaultArchiveService" public="true">
        <interface>com.atlassian.stash.archive.ArchiveService</interface>
    </component>

    <!--
        Define a servlet to stream the output from the ArchiveService to the client.
    -->
    <servlet key="archive-servlet" class="com.atlassian.stash.archive.ArchiveServlet">
        <description>Stash Archive Servlet</description>
        <url-pattern>/archive/*</url-pattern>
    </servlet>

    <!--
        Bind some view resources to the stash.layout.repository context (the layout used for all repository views)
    -->
    <web-resource key="archive-resources" name="archive-resources">
        <resource type="download" name="style.css" location="/static/style.css"/>
        <resource type="download" name="archive.js" location="/static/archive.js"/>
        <resource type="download" name="icon-archive.png" location="/static/icon-archive.png"/>
        <context>stash.layout.repository</context>
        <dependency>com.atlassian.stash.stash-web-plugin:global</dependency>
    </web-resource>

    <!--
        Render the Download archive button immediately before the repository clone button in repository views.
    -->
    <web-item key="stash-repository-download-archive" name="Download archive" weight="110"
            section="stash.web.repository.header.buttons">
        <label key="stash.web.repository.download-archive">Download</label>
        <tooltip key="stash.web.repository.download-archive.tooltip">Download the current branch</tooltip>
        <link linkId="download-archive-button">/</link>
        <param name="stashIconClass">aui-icon icon-download-archive</param>
    </web-item>

</atlassian-plugin>
